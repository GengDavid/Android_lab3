<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/showdetail"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="4"
        android:background="#55848181"
        android:gravity="center">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@mipmap/arla"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/back"/>
        <ImageButton
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/empty_star"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/star"
            android:layout_alignLeft="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="This is a goods"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="price"
            android:textSize="20dp"
            android:textColor="#D5000000" />

        <TextView
            android:id="@+id/goodsweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goodsweight"
            android:textSize="18dp"
            android:textColor="#8A000000"
            android:layout_alignBottom="@+id/vline"
            android:layout_alignLeft="@+id/price"
            android:layout_alignStart="@+id/price"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/vline"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:background="#1E000000" />

        <ImageButton
            android:id="@+id/shopcaricon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shoplist"
            android:background="#FFFFFF"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/hline"
            android:layout_width="fill_parent"
            android:layout_height="5px"
            android:background="#1E000000" />

        <Button
            android:id="@+id/moreinfo"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center|start"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="更多产品信息"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/grayline"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="#1E000000"/>
    </LinearLayout>
</LinearLayout>